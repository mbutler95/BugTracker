@model BugTracker.Models.DataModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bug</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Bugs[0].BugId" class="control-label">Bug ID</label>
                <input asp-for="Bugs[0].BugId" class="form-control" />
                <span asp-validation-for="Bugs[0].BugId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bugs[0].Title" class="control-label"></label>
                <input asp-for="Bugs[0].Title" class="form-control" />
                <span asp-validation-for="Bugs[0].Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bugs[0].Description" class="control-label"></label>
                <input asp-for="Bugs[0].Description" class="form-control" />
                <span asp-validation-for="Bugs[0].Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bugs[0].OpenedDate" class="control-label">Opened Date</label>
                <input asp-for="Bugs[0].OpenedDate" class="form-control" />
                <span asp-validation-for="Bugs[0].OpenedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bugs[0].UserId" class="control-label">Assigned User</label>
                <select name="CategoryId" asp-for="Bugs[0].UserId" class="form-control" asp-items="Model.UserNameSelectList"></select> 
                <span asp-validation-for="Bugs[0].UserId" class="text-danger"></span>
            </div>
            <div class="form-group" >
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Bugs">Back to List</a>
</div>

