@model BugTracker.Models.BugModel

@{
    ViewData["Title"] = "Close";
}

<h1>Close</h1>

<h3>Are you sure you want to close this?</h3>
<div>
    <h4>Bug</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Bug ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BugId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)              
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Opened Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OpenedDate)
        </dd>
        <dt class = "col-sm-2">
            Assigned User
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd> 
    </dl>
    
    <form asp-action="Close">
        <input type="submit" value="Close" class="btn btn-danger" /> |
        <a asp-controller="Home" asp-action="Bugs">Back to List</a>
    </form>
</div>
